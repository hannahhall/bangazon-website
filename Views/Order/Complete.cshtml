@model Bangazon.Models.Order

@{
    ViewData["Title"] = "Complete Order";
}

<h2>Complete Order</h2>
<hr />
<h3>Order Total: $@Model.OrderProducts.Select(op => op.Product.Price).Sum()</h3>
<form asp-action="Complete">
    <div class="form-horizontal">
        <h4>Choose Payment</h4>
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="OrderId" />
        <div class="form-group">
            <label asp-for="PaymentTypeId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="PaymentTypeId" class="form-control" asp-items="ViewBag.PaymentTypeId"></select>
                <span asp-validation-for="PaymentTypeId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
<a asp-controller="PaymentTypes" asp-action="Create">Add New Payment</a>
<div>
    <a asp-action="Index">Back to List</a>
</div>

